{
  "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
          "ES2020",
          "esnext.asynciterable"
      ],
      "moduleResolution": "node",
      "esModuleInterop": true,
  },
  "exclude": [
      "node_modules"
  ],
  "include": ["**/*.ts"],
}
